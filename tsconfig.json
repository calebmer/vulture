{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "packages",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "examples"
  ]
}
